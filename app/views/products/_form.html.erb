<%= render 'layouts/errors', :object => @product %>

<%= form_for @product, html: { multipart: true } do |f| %>
  Name: <%= f.text_field :name %>
  Description: <%= f.text_field :description %>
  Price: <%= f.number_field :price %>
  Image:
  <br><br>
  <%= f.file_field :image %>
  <br><br>
  <%= f.submit "Submit", class: 'btn' %>
<% end %>
